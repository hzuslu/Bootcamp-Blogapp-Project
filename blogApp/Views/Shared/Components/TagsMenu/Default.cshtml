@model List<Tag>

<div class="card mt-2">
	<div class="card-header no-border">
		<h5 class="card-title">Tags</h5>
	</div>
	<div class="card-body">
		<ul class="list-inline d-flex flex-wrap gap-2">
			@foreach (var tag in Model)
			{
				<li class="list inline item">
					<a href="/post/tag/with/@tag.Url" class="btn btn-outline-secondary btn-sm"
						style="border-color: blue;">@tag.Text</a>
				</li>
			}
		</ul>
	</div>
</div>
