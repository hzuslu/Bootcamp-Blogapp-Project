@model PostCreateModel

@{
    ViewData["Title"] = "Create Post";
}

<section class="background-radial-gradient overflow-hidden">
    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight text-white">
                    Create a New Post
                </h1>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass">
                    <div class="card-body px-4 py-5 px-md-5">
                        <form asp-controller="Post" asp-action="CreatePost" method="post" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label for="Title" class="form-label text-dark">Title</label>
                                <input asp-for="Title" class="form-control form-control-lg" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="Url" class="form-label text-dark">URL</label>
                                <input asp-for="Url" class="form-control form-control-lg" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="Content" class="form-label text-dark">Content</label>
                                <textarea asp-for="Content" class="form-control form-control-lg"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label text-dark">Tags</label>

                                <div class="row">
                                    @foreach (var tag in ViewBag.Tags)
                                    {
                                        <div class="col-md-6">
                                            <div>
                                                <input type="checkbox" name="SelectedTags" value="@tag.TagId" />
                                                <label class="text-dark">@tag.Text</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>



                            <div class="form-group">
                                <label for="imageFile" class="form-label">Product Image</label>
                                <input type="file" name="imageFile" id="imageFile" class="form-control" />
                                <span class="text-danger">@ViewBag.ImageFileError</span>
                            </div>


                            <div class="pt-1 mb-4">
                                <button class="btn btn-dark btn-lg btn-block justify-content-center"
                                    type="submit">Create Post</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group input[type="checkbox"],
    .form-group input[type="file"],
    .form-group textarea {
        border-radius: 20px;
    }

    .btn-dark {
        background-color: #4CAF50;
        border-color: #4CAF50;
        color: white;
    }
</style>
