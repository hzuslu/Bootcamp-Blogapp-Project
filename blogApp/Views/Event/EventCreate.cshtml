@model EventCreateModel

@{
    ViewData["Title"] = "Event Create Page";
}

<section class="background-radial-gradient overflow-hidden">
    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    Create a New Event
                </h1>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass">
                    <div class="card-body px-4 py-5 px-md-5">
                        <form asp-controller="Event" asp-action="EventCreate" method="post">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-outline mb-4">
                                <label asp-for="EventTitle" class="form-label">Event Title <span
                                        asp-validation-for="EventTitle" class="text-danger"></span></label>
                                <input asp-for="EventTitle" class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Location" class="form-label">Location <span
                                        asp-validation-for="Location" class="text-danger"></span></label>
                                <input asp-for="Location" class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="StartTime" class="form-label">Start Time <span
                                        asp-validation-for="StartTime" class="text-danger"></span></label>
                                <input asp-for="StartTime" type="datetime-local" class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="CategoryId" class="form-label">Category <span
                                        asp-validation-for="CategoryId" class="text-danger"></span></label>
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories"
                                    class="form-select form-select-lg">
                                    <option value="">Choose a Category</option>
                                </select>
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="btn btn-dark btn-lg btn-block justify-content-center"
                                    type="submit">Create Event</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
